= link_to cart_path, id: "cart-button", class: "relative text-brown-black hover:text-amber-700 p-2 rounded-md transition-colors" do
  %svg.w-5.h-5{ fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
    %path{ "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", "d" => "M16 11V7a4 4 0 00-8 0v4M5 9h14l-1 10H6L5 9z" }
  - if user_signed_in? && current_user.cart&.total_items > 0
    %span.absolute.-top-1.-right-1.bg-amber-600.text-white.text-xs.rounded-full.h-5.w-5.flex.items-center.justify-center= current_user.cart.total_items
