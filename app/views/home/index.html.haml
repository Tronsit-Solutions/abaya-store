/ Category Stack Scroll Section
- if @category_showcases.present?
  %section#collections.category-stack-section.relative{ data: { controller: "category-stack" }, style: "min-height: #{@category_showcases.length * 100}vh;" }
    / Header
    .sticky.top-0.z-50.bg-gradient-to-br.from-slate-50.via-purple-50.to-pink-50.py-8.border-b.border-purple-200
      .max-w-7xl.mx-auto.px-4.text-center
        %h2.text-4xl.md:text-5xl.font-bold.text-brown-black.mb-2
          Our Collections
        %p.text-lg.text-gray-700.max-w-2xl.mx-auto
          Scroll to explore each category

    / Stack Container
    .relative{ style: "padding-top: 5vh; padding-bottom: 5vh;" }
      - @category_showcases.each_with_index do |category, index|
        .category-stack-card.sticky{ data: { category_stack_target: "card" }, style: "top: 20vh; margin-bottom: #{index < @category_showcases.length - 1 ? '80vh' : '10vh'};", :"data-category-index" => index }
          = render "category_stack_card", category: category, index: index

/ Trending Now Section
- if @trending_products.present?
  %section#trending.relative.py-24.bg-gradient-to-br.from-brown-black.via-black.to-brown-black.overflow-hidden
    / Animated background elements
    .absolute.top-0.left-0.w-full.h-full.overflow-hidden.pointer-events-none
      .absolute.top-20.left-10.w-72.h-72.bg-amber-300.rounded-full.blur-3xl.opacity-20.animate-pulse
      .absolute{class: "bottom-20 right-10 w-96 h-96 bg-rose-300 rounded-full blur-3xl opacity-15 animate-pulse", style: "animation-delay: 1s;"}
      .absolute{class: "top-1/2 left-1/2 w-64 h-64 bg-purple-300 rounded-full blur-3xl opacity-10 animate-pulse", style: "animation-delay: 2s; transform: translate(-50%, -50%);"}
    
    .max-w-7xl.mx-auto.px-4.relative.z-10
      / Header
      .text-center.mb-16{ data: { controller: "reveal", reveal_step_value: 100 } }
        .reveal-initial{ data: { reveal_target: "item" } }
          %small{class: "block uppercase tracking-[0.5em] text-xs font-semibold text-amber-500 mb-4"} Fresh Arrivals
          %h2.text-5xl.md:text-6xl.font-bold.text-white.mb-6
            Trending
            %span.relative.inline-block
              Now
              .absolute.-bottom-2.left-0.w-full.h-3.bg-amber-400.opacity-40.rounded-full
          %p.text-xl.text-gray-300.max-w-2xl.mx-auto.mt-4
            Discover the latest additions to our collection. Handpicked pieces that are making waves right now.
      
      / Trending Products Grid
      .grid.grid-cols-1.md:grid-cols-2.lg:grid-cols-4.gap-6.mb-12{ data: { controller: "reveal", reveal_step_value: 120 } }
        - @trending_products.each_with_index do |product, index|
          .group.relative.reveal-initial{ data: { reveal_target: "item" }, style: "animation-delay: #{index * 100}ms;" }
            / Product Card
            .relative.overflow-hidden.rounded-3xl.bg-white.shadow-xl.border.border-gray-100.transition-all.duration-500.hover:shadow-2xl{class: "bg-white shadow-xl border border-gray-100 transition-all duration-500 hover:shadow-2xl hover:-translate-y-2 hover:scale-[1.02] hover:-translate-y-2 hover:scale-[1.02]"}
              / Image Container with Overlay
              .relative.h-80.overflow-hidden{class: "bg-gradient-to-br from-gray-100 to-gray-200"}
                - if product.image.attached?
                  = image_tag product.image, class: "w-full h-full object-cover transition-transform duration-700 group-hover:scale-110", alt: product.name
                - else
                  .w-full.h-full.bg-cover.bg-center{style: "background-image: url('#{asset_path 'abaya1.jpg'}');"}
                    .absolute{class: "inset-0 bg-gradient-to-t from-black/60 to-transparent"}
                
                / Floating Badge
                .absolute{class: "top-4 left-4 z-20"}
                  .flex.items-center.gap-2.px-3.py-1.5.rounded-full{class: "bg-white/90 backdrop-blur-md shadow-lg"}
                    %svg.w-4.h-4{class: "text-amber-600 animate-pulse"}
                      %path{:d => "M12 2l3.09 6.26L22 9.27l-5 3.64 1.91 6.09L12 17.77l-6.91 1.23L7 12.91 2 9.27l6.91-1.01L12 2z"}
                    %span.text-xs.font-bold.text-brown-black New
                
                / Hover Overlay
                .absolute{class: "inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"}
                / Quick View Button (appears on hover)
                .absolute{class: "bottom-4 left-1/2 transform -translate-x-1/2 z-20 opacity-0 group-hover:opacity-100 transition-all duration-300 group-hover:translate-y-0 translate-y-4"}
                  = link_to product_path(product), class: "inline-flex items-center gap-2 px-5 py-2.5 rounded-full bg-white text-brown-black font-semibold text-sm shadow-xl hover:bg-amber-50 transition-colors" do
                    %svg.w-4.h-4{class: "text-brown-black"}
                      %path{:d => "M15 12a3 3 0 11-6 0 3 3 0 016 0z", "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2"}
                      %path{:d => "M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z", "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2"}
                    Quick View
              
              / Product Info
              .p-6
                / Category Tag
                - if product.category.present?
                  .mb-3
                    %span.inline-block.px-3.py-1.text-xs.font-semibold.text-amber-600.bg-amber-50.rounded-full.uppercase.tracking-wide
                      = product.category
                
                / Product Name
                %h3.text-xl.font-bold.text-brown-black.mb-2.group-hover:text-amber-600.transition-colors.line-clamp-2
                  = product.name
                
                / Description
                %p.text-sm.text-gray-600.mb-4.line-clamp-2
                  = product.description
                
                / Price and Stock
                .flex.items-center.justify-between.mb-4
                  .flex.flex-col
                    %span.text-2xl.font-bold.text-amber-600
                      $#{product.price}
                    - if product.stock > 0
                      %span.text-xs.text-green-600.font-medium
                        %svg.inline.w-3.h-3{:fill => "currentColor", :viewbox => "0 0 24 24"}
                          %path{:d => "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"}
                        In Stock
                    - else
                      %span.text-xs.text-red-600.font-medium Out of Stock
                
                / Action Buttons
                .flex.gap-2
                  = link_to product_path(product), class: "flex-1 text-center px-4 py-2.5 rounded-lg bg-brown-black text-white font-semibold text-sm hover:bg-gray-900 transition-all duration-300 hover:scale-105" do
                    View Details
                  - if user_signed_in? && product.stock > 0
                    = link_to cart_items_path(product_id: product.id), method: :post, class: "px-4 py-2.5 rounded-lg bg-amber-600 text-white font-semibold text-sm hover:bg-amber-700 transition-all duration-300 hover:scale-105 flex items-center justify-center", data: { controller: "cart", action: "click->cart#add", cart_message_value: "Added #{product.name} to cart" } do
                      %svg.w-5.h-5{:fill => "none", :stroke => "currentColor", :viewbox => "0 0 24 24"}
                        %path{:d => "M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z", "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2"}
      
      / CTA Section
      .text-center.mt-12{ data: { controller: "reveal" } }
        .reveal-initial{ data: { reveal_target: "item" } }
          = link_to products_path, class: "group inline-flex items-center gap-3 px-8 py-4 rounded-full bg-gradient-to-r from-amber-600 to-amber-700 text-white font-bold text-lg shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105 hover:from-amber-700 hover:to-amber-800" do
            %span View All New Arrivals
            %svg.w-5.h-5.transition-transform.duration-300.group-hover:translate-x-1{:fill => "none", :stroke => "currentColor", :viewbox => "0 0 24 24"}
              %path{:d => "M9 5l7 7-7 7", "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2"}

