      .relative.h-full.w-full.max-w-7xl.mx-auto.px-4.grid.grid-cols-1.lg:grid-cols-2.items-center
        .content-left.transform.translate-y-10.opacity-0.transition-all.duration-1000{ data: { section_slider_target: "content" } }
          .inline-block.mb-6
            %span.py-1.px-3.border.text-purple-400.text-xs.uppercase.rounded-full{ class: "tracking-[0.2em] border-purple-500/30 bg-purple-900/10" } New Arrivals
          %h2.text-6xl.md:text-7xl.lg:text-8xl.font-serif.text-white.mb-6.leading-tight
            Modern
            %br
            %span.text-transparent.bg-clip-text.bg-gradient-to-r.from-purple-200.to-purple-500 Essence
          %p.text-lg.text-gray-300.mb-10.max-w-md.leading-relaxed.font-light
