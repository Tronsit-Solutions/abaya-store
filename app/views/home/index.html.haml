      .absolute.inset-0.bg-cover.bg-center.transform.scale-110{ style: "background-image: url('#{asset_path 'hero_img.jpg'}');", data: { section_slider_target: "bgImage" } }
      .absolute.inset-0.bg-gradient-to-r.from-black.to-transparent.opacity-80{ class: "via-black/50" }
      
