.auth-container.min-h-screen.flex.items-center.justify-center.px-4.py-12.bg-gradient-to-br{:style => "background: linear-gradient(135deg, hsl(var(--color-bg)) 0%, hsl(var(--color-surface-2)) 100%);", data: { controller: "reveal" }}
  .auth-card.max-w-md.w-full.card.p-8.reveal-initial{ data: { reveal_target: "item" } }
    / Header
    .text-center.mb-8
      .mb-4
        %h1.text-4xl.font-bold.text-brown-black.mb-2 Welcome Back
        .h-1.w-20.bg-amber-600.mx-auto.rounded
      %p.text-gray-600 Sign in to your account to continue shopping
    / Form
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f|
      - if alert
        .bg-red-50.border.border-red-200.text-red-700.px-4.py-3.rounded-lg.text-sm= alert
      - if notice
        .bg-green-50.border.border-green-200.text-green-700.px-4.py-3.rounded-lg.text-sm= notice
      .space-y-5
        / Email Field
        .field
          = f.label :email, class: "block text-sm font-medium text-brown-black mb-2"
          .relative
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all bg-white", placeholder: "your@email.com"
            .absolute.right-3.top-3.text-gray-400
              %svg.w-5.h-5{:fill => "none", :stroke => "currentColor", :viewbox => "0 0 24 24"}
                %path{:d => "M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207", "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2"}
        / Password Field
        .field
          = f.label :password, class: "block text-sm font-medium text-brown-black mb-2"
          .relative
            = f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all bg-white", placeholder: "••••••••"
            .absolute.right-3.top-3.text-gray-400
              %svg.w-5.h-5{:fill => "none", :stroke => "currentColor", :viewbox => "0 0 24 24"}
                %path{:d => "M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z", "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2"}
        / Remember Me & Forgot Password
        .flex.items-center.justify-between
          - if devise_mapping.rememberable?
            .flex.items-center
              = f.check_box :remember_me, class: "w-4 h-4 text-amber-600 border-gray-300 rounded focus:ring-amber-500"
              = f.label :remember_me, "Remember me", class: "ml-2 text-sm text-gray-600"
          - if devise_mapping.recoverable?
            = link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-amber-600 hover:text-amber-700 font-medium transition-colors"
      / Submit Button
      .actions.pt-2
        = f.submit "Sign In", class: "w-full bg-black text-white py-3 rounded-lg font-semibold hover:bg-gray-800 transition-all duration-300 transform hover:scale-[1.02] shadow-lg hover:shadow-xl"
    / Sign Up Link
    .mt-6.text-center.pt-6.border-t.border-gray-200
      %p.text-gray-600.text-sm
        Don't have an account?
        = link_to "Sign up", new_registration_path(resource_name), class: "text-amber-600 hover:text-amber-700 font-semibold transition-colors"

